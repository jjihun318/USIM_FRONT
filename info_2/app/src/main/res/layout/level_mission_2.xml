<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="#CDEB9F"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lv_title_2"
                android:text="일주일에 3번 5km 러닝하기"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lv_progress_2"
                android:text="1/3"
                android:textSize="12sp"
                android:textColor="#888888"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lv_description_2"
            android:text="꾸준한 훈련으로 체력 향상"
            android:textSize="12sp"
            android:textColor="#666666"/>

        <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:id="@+id/lv_rate_2"
            android:layout_height="10dp"
            android:progress="33"
            android:max="100"
            android:progressTint="#86B94E"
            android:progressBackgroundTint="#B8D786"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mission_category_2"
                android:text="STARTER MISSION"
                android:textSize="10sp"
                android:textColor="#86B94E"/>

            <TextView
                android:layout_width="62dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:id="@+id/lv_exp_2"
                android:background="@drawable/ic_reward"
                android:paddingStart="8dp"
                android:paddingTop="5dp"
                android:paddingEnd="8dp"
                android:paddingBottom="4dp"
                android:text="+100 EXP"
                android:textColor="#333333"
                android:textSize="10sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>