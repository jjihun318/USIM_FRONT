<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="#E5F3CC"
    app:cardCornerRadius="12dp">

    <RelativeLayout
        android:id="@+id/badge_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/text_content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toStartOf="@+id/iv_lock_badge"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/badge_title_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="맨토링 마스터"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"/>
            <TextView
                android:id="@+id/badge_description_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="다른 러너에게 10회 도움을 주세요!"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_lock_badge"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_lock"
            app:tint="#AAAAAA"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:contentDescription="잠금 아이콘"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_content_layout"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/badge_detail_1"
                android:text="맨토링 10회 완료"
                android:textSize="12sp"
                android:textColor="#333333"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/badge_progress_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5/10"
                android:textSize="12sp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>

            <ProgressBar
                android:id="@+id/badge_progress_bar_1"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:progress="5"
                android:max="10"
                android:progressTint="#86B94E"
                android:progressBackgroundTint="#CCCCCC"
                android:layout_below="@id/badge_detail_1"
                android:layout_marginTop="8dp"/>

        </RelativeLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>